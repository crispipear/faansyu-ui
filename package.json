{
  "name": "faansyu-ui",
  "version": "0.0.1",
  "description": "faansyu-ui react ui component library",
  "author": "Su Li <lisuy97@gmail.com>",
  "license": "MIT",
  "repository": "crispipear/faansyu-ui",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run build-watch\" \"cd docs/ && npm run start\"",
    "build": "tsup",
    "build-watch": "tsup --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/styled-components": "^5.1.26",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.5.0",
    "eslint": "^8.26.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "styled-components": "^5.3.6",
    "tsup": "^6.3.0",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "treeshake": true,
    "sourcemap": true,
    "minify": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "format": [
      "cjs",
      "esm"
    ],
    "external": [
      "react"
    ]
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  }
}
